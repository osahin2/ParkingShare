<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border">
    <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/parkingmarker"
    android:id="@+id/marker"
    android:layout_centerVertical="true"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/distance_text"
        android:id="@+id/adres_text"
        android:layout_toRightOf="@id/marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/directions_icon"
        android:text=""
        android:textSize="10sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_directions_black_24dp"
        android:id="@+id/directions_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>